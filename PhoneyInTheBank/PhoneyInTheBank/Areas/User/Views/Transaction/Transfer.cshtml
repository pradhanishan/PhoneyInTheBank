@model ViewModels.TransferVM;
@{
	ViewData["Title"] = "Transfer";
}

<div class="container">
	<div>
		<h1>Transfer phoney</h1>
	</div>
	<div>
		<span>Donate your phoney to AI or transfer phoney between your Operative and Investment Account</span>

	</div>
	<div style="width:50%;">
		<form method="post" asp-area="User" asp-controller="Transaction" asp-action="Transfer">
			
			<hr />
			<div class="mb-3 row">
				<label class="col-form-label" asp-for="Amount"></label>
				<div class="col-sm-10">
					<input type="text" class="form-control" asp-for="Amount" placeholder="enter amount to transfer">
				</div>
			</div>
			<div class="form-check mb-3">
				<input class="form-check-input" type="checkbox" asp-for="DonateToAI" id="donateToAI">
				<label class="form-check-label" asp-for="DonateToAI">
				</label>
			</div>
			<div class="mb-3 row" id="transferType">
				<label class="col-form-label" asp-for="TransferType"></label>

				<div class="col-sm-10">
					<select class="form-select mb-3" aria-label="Default select example" asp-for="TransferType">
						<option selected value="oti">Operative to Investment</option>
						<option value="ito">Investment To Operative</option>

					</select>
				</div>
			</div>
			<div class="text-danger" asp-validation-summary="All"></div>
			<input type="submit" class="btn btn-primary custom-bg-blue text-white" value="submit" />
		</form>
	</div>
</div>


<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#donateToAI").click(function () {
                if ($(this).is(":checked")) {
                    $("#transferType").hide();
                } else {
                    $("#transferType").show();
                }
            });
        });
    </script>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
	}