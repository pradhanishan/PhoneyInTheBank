@model ViewModels.TransferVM;
@{
	ViewData["Title"] = "Transfer";
}

<div class="container">
	<div class="m-3 custom-head">
		<div><h1>Transfer phoney  </h1></div>
		<div><a class="btn btn-danger text-dedcoration-none text-white" asp-area="User" asp-controller="User" asp-action="Index"><i class="fa-solid fa-angle-left"></i> back</a></div>
	</div>
	<div class="m-3">
		<span>Donate your phoney to AI or transfer phoney between your Operative and Investment Account</span><hr />

	</div>
	<div class="custom-transfer-container m-3">
		<form method="post" asp-area="Transaction" asp-controller="Transfer" asp-action="Index">


			<div class="mb-3 row">
				<label class="col-form-label fw-bold" asp-for="Amount"></label>
				<div class="col-sm-10">
					<input type="text" class="form-control" asp-for="Amount" placeholder="enter amount to transfer">
				</div>
			</div>
			<div class="form-check mb-3">
				<input class="form-check-input" type="checkbox" asp-for="DonateToAI" id="donateToAI">
				<label class="form-check-label" asp-for="DonateToAI">
				</label>
			</div>
			<div class="mb-3 row" id="transferType">
				<label class="col-form-label fw-bold" asp-for="TransferType"></label>

				<div class="col-sm-10">
					<select class="form-select mb-3" aria-label="Default select example" asp-for="TransferType">
						<option selected value="oti">Operative to Investment</option>
						<option value="ito">Investment To Operative</option>

					</select>
				</div>
			</div>
			<div class="text-danger" asp-validation-summary="All"></div>
			<input type="submit" class="btn btn-primary custom-bg-blue text-white" value="submit" />
		</form>
	</div>
</div>


<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
	$(function() {
		$("#donateToAI").click(function() {
			if ($(this).is(":checked")) {
				$("#transferType").hide();
			} else {
				$("#transferType").show();
			}
		});
	});
</script>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
	}