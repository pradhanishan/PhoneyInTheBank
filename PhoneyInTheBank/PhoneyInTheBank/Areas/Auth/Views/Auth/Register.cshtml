@model ViewModels.RegisterVM;

@{
	ViewData["Title"] = "Register";
}

<div class="container text-lg-start custom-registration-form-container">
	<form method="post" asp-action="Register" asp-controller="Auth" asp-area="Auth">
		<div asp-validation-summary="All" class="text-danger"></div>
		<h1>Register</h1>
		<div class="mb-3">
			<input type="text" class="form-control" placeholder="first name" asp-for="FirstName" />
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" placeholder="last name (optional)" asp-for="LastName" />
		</div>
		<div class="mb-3">
			<input type="email" class="form-control" placeholder="email address" asp-for="Email" />
		</div>
		<div class="mb-3">
			<input type="password" class="form-control" placeholder="password" asp-for="Password" />
		</div>
		<div class="mb-3">
			<input type="password" class="form-control" placeholder="confirm password" asp-for="ConfirmPassword" />
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" placeholder="age" asp-for="Age" />
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" placeholder="phone number" asp-for="PhoneNumber" />
		</div>
		<div class="mb-3">
			<select class="form-select" asp-for="Country" asp-items="ViewBag.Countries"></select>
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" placeholder="city" asp-for="City" />
		</div>
		<div class="mb-3">
			<input type="submit" class="btn btn-primary custom-bg-blue" value="register" />
		</div>
	</form>
</div>

