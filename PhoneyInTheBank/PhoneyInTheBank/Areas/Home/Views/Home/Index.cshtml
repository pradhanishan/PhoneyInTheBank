@{
	ViewData["Title"] = "Home Page";
}
<div class="container">
	<div class="text-center m-3">
		<h1>Welcome to Phoney In The Bank</h1>
		<h3 class="text-secondary">A wannabe banking web application</h3>
	</div>
	<div class="container custom-home-container">
		<div class="custom-home-child m-3 p-3 custom-bg-l-blue text-dark">
			<h4>
				Join
			</h4>
			<hr/>
			<p>
				<span>
					Register 
					<a asp-area="Auth" asp-controller="Auth" asp-action="Register" class="text-decoration-none custom-text-yellow fw-bold">here</a>
					to create your very own Phoney Bank account. 
				</span> <br/><br/>
				<span>
					Get rewarded 1000 phonies for registering to help you get started.
				</span>

			</p>
		</div>		
		<div class="custom-home-child m-3 p-3 custom-bg-l-red text-dark">
			<h4>
				Earn
			</h4>
			<hr/>
			<p>
				<span>
					You can earn phonies, Phonies are the currency we use in our app.
				</span> <br/><br/>
				<span>
					You can earn phonies by
				</span>
				<ul class="list-group list-group-flush">
					<li  class="list-group-item  text-dark custom-bg-l-red">Playing Rock Paper Scissors</li>
					<li  class="list-group-item  text-dark custom-bg-l-red">Investing in organizations</li>
					<li  class="list-group-item  text-dark custom-bg-l-red">Collecting daily presents</li>
					<li  class="list-group-item  text-dark custom-bg-l-red">Taking loan</li>
				</ul>

			</p>
		</div>	
		<div class="custom-home-child m-3 p-3  custom-bg-l-green text-dark">
			<h4>
				Build
			</h4>
			<hr/>
			<p>
				<span>
					You can build your reputation in this application.
				</span> <br/><br/>

				<ul class="list-group  list-group-flush">
					<li class="list-group-item  text-dark custom-bg-l-green">Pay your loan to build trustworthiness.</li>
					<li class="list-group-item text-dark custom-bg-l-green">Win games of Rock Paper Scissors and collect exotic presents to build your luck.</li>
					<li class="list-group-item text-dark custom-bg-l-green">Donate phonies to a greedy AI to build your goodwill.</li>
					<li class="list-group-item text-dark custom-bg-l-green">Avoid going broke.</li>
				</ul>

			</p>
		</div>	
		
	</div>

</div>
